@model ClinicAppointmentClient.Models.Appointment

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3 class="text-center text-white">Are you sure you want to delete this?</h3>
            <div>
                <hr style="color: white;" />
                <dl class="row">
                    <dt class="col-sm-2 text-white">
                        @Html.DisplayNameFor(model => model.Id)
                    </dt>
                    <dd class="col-sm-10 text-white">
                        @Html.DisplayFor(model => model.Id)
                    </dd>
                    <dt class="col-sm-2 text-white">
                        Patient Name
                    </dt>
                    <dd class="col-sm-10 text-white">
                        @Html.DisplayFor(model => model.PatientName)
                    </dd>
                    <dt class="col-sm-2 text-white">
                        Phone Number
                    </dt>
                    <dd class="col-sm-10 text-white">
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </dd>
                    <dt class="col-sm-2 text-white">
                        Doctor Assigned
                    </dt>
                    <dd class="col-sm-10 text-white">
                        @Html.DisplayFor(model => model.Doctor.DoctorName)
                    </dd>
                    <dt class="col-sm-2 text-white">
                        @Html.DisplayNameFor(model => model.Date)
                    </dt>
                    <dd class="col-sm-10 text-white" ">
                    @Html.DisplayFor(model => model.Date)
                    </dd>
                    <dt class="col-sm-2 text-white">
                        Time Slot
                    </dt>
                    <dd class="col-sm-10 text-white">
                    @Html.DisplayFor(model => model.TimeSlot.Slot)
                    </dd>
                    <dt class="col-sm-2 text-white">
                        Late
                    </dt>
                    <dd class="col-sm-10 text-white">
                    @Html.DisplayFor(model => model.IsLate)
                    </dd>
                </dl>
                <div>
                    <form asp-action="Delete" class="mt-4 text-center">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fa-solid fa-arrow-left"></i>Back
                        </a>
                        <div>
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>