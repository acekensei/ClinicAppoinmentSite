@model ClinicAppointmentClient.Models.Doctor

@{
    ViewData["Title"] = "Edit Doctor Info";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h4 class="text-center text-white">Edit Doctor Info</h4>
            <hr />
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="DoctorName" class="control-label text-white"></label>
                    <input asp-for="DoctorName" class="form-control" />
                    <span asp-validation-for="DoctorName" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsAvailable" /> Is Available@* @Html.DisplayNameFor(model => model.IsAvailable) *@
                    </label>
                </div>
                <div class="form-group mt-4 text-center">
                    <a asp-action="Index" class="btn btn-outline-warning ml-2">
                        <i class="fa-solid fa-arrow-left"></i> Back
                    </a>
                    <button type="submit" class="btn btn-primary ml-2">
                        <i class="fa-regular fa-floppy-disk"></i>
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
