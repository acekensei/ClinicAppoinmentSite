@model ClinicAppointmentClient.Models.Doctor

@{
    ViewData["Title"] = "Enter Doctor Info";
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h4 class="text-center text-white">Add Doctor</h4>
            <hr style="color: white;" />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="DoctorName" class="control-label text-white">Doctor Name</label>
                    <input asp-for="DoctorName" class="form-control" />
                    <span asp-validation-for="DoctorName" class="text-danger"></span>
                </div>
                <div class="form-group mt-4 text-center">
                    <a asp-action="Index" class="btn btn-outline-warning ml-2">
                        <i class="fa-solid fa-arrow-left"></i> Back
                    </a>
                    <button type="submit" class="btn btn-primary ml-2">
                        <i class="fa-regular fa-floppy-disk"></i>
                        Create
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
